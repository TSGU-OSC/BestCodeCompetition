#include <stdio.h>
int main()
{
    float a, b;
    scanf("%f", &a);
    if (a > 500)
    {
        b = 0.15;
    }
    else
    {
        if (a > 300)
        {
            b = 0.10;
        }
        else
        {
            if (a > 100)
            {
                b = 0.075;
            }
            else
            {
                if (a > 50)
                {
                    b = 0.05;
                }
                else
                {
                    b = 0;
                }
            }
        }
    }
    printf("%f", b);
    return 0;
}